<?xml version="1.0" encoding="utf-8"?>

<launch>
	<arg name="file" default="$(find igvc2022)/params/segmentation_params.yaml"/>
	<arg name="input" default="/velodyne_points"/>
	<arg name="ground" default="/ground_cloud"/>
	<arg name="obstacle" default="obstacle_cloud"/>

  <!-- Ground segmentation -->
  <node name="ground_segmentation" pkg="linefit_ground_segmentation_ros" type="ground_segmentation_node">
    <rosparam command="load" file="$(arg file)"/>
    <param name="input_topic" value="$(arg input)" />
    <param name="ground_output_topic" value="$(arg ground)" />
    <param name="obstacle_output_topic" value="$(arg obstacle)" />
  </node>

</launch>
